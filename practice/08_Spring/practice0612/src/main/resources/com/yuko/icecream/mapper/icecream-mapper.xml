<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuko.icecream.mapper.IcecreamMapper">
    <select id="getList" resultType="com.yuko.icecream.domain.IcecreamVO">
        select * from tbl_board
        order by no desc
</select>
    <select id="get" resultType="com.yuko.icecream.domain.IcecreamVO">
        select * from tbl_icecream where no = #{no}
    </select>
</mapper>