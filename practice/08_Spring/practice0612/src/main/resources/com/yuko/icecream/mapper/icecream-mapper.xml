<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuko.icecream.mapper.IcecreamMapper">

    <insert id="create" useGeneratedKeys="true" keyProperty="no">
        insert into tbl_icecream (name, flavor, price) values (#{name}, #{flavor}, #{price})
    </insert>

    <delete id="delete">
        delete from tbl_icecream where no = #{no}
    </delete>

    <select id="findAll" resultType="com.yuko.icecream.domain.IcecreamVO">
        <![CDATA[
            select * from tbl_icecream order by no desc
        ]]>
    </select>

